<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.controller.ChooseActionActivity">

    <TextView
        android:id="@+id/message_choose_action"
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="Erreur, le choix à faire n'a pas pu être chargé"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/activity_main_editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/choose_action_list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_choose_action" />
</androidx.constraintlayout.widget.ConstraintLayout>