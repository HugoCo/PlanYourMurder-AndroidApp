<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.controller.HomeFragment">


    <ScrollView
        android:layout_width="413dp"
        android:layout_height="733dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/home_photo"
                android:layout_width="104dp"
                android:layout_height="93dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:baselineAligned="false"
                android:src="@drawable/ic_face_black_24dp"
                android:translationX="230dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toEndOf="@+id/text_mycharacter"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/text_mycharacter"
                android:layout_width="239dp"
                android:layout_height="95dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-100dp"
                android:layout_marginBottom="24dp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/my_name"
                android:textColor="#711F19"
                android:textSize="36sp"
                android:translationX="00dp"
                android:translationY="00dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/announce_summary_role"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:fontFamily="@font/amarante"
                android:lineSpacingExtra="5sp"
                android:text="@string/announce_summary_role"
                android:textColor="#000000"
                android:textSize="24sp"
                android:translationX="10dp"
                android:translationY="0dp" />

            <TextView
                android:id="@+id/summary_role"
                android:layout_width="384dp"
                android:layout_height="62dp"
                android:text="Pas d'informations"
                android:translationX="10dp" />

            <TextView
                android:id="@+id/announce_properties"
                android:layout_width="198dp"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:fontFamily="@font/amarante"
                android:lineSpacingExtra="5sp"
                android:text="Votre Etat"
                android:textColor="#000000"
                android:textSize="24sp"
                android:translationX="10dp"
                android:translationY="0dp" />

            <TextView
                android:id="@+id/properties"
                android:layout_width="386dp"
                android:layout_height="62dp"
                android:text="Pas d'informations"
                android:translationX="10dp" />

            <TextView
                android:id="@+id/announce_scenario_title"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amarante"
                android:lineSpacingExtra="30sp"
                android:text="@string/announce_scenario_title"
                android:textColor="#000000"
                android:textSize="24sp"
                android:translationX="10dp"
                android:translationY="0dp"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="265dp" />

            <TextView
                android:id="@+id/scenario_title"
                android:layout_width="368dp"
                android:layout_height="60dp"
                android:text="Pas d'informations"
                android:translationX="10dp" />

            <TextView
                android:id="@+id/announce_scenario_summary"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amarante"
                android:lineSpacingExtra="30sp"
                android:text="@string/announce_scenario_summary"
                android:textColor="#000000"
                android:textSize="24sp"
                android:translationX="10dp"
                tools:layout_editor_absoluteX="28dp"
                tools:layout_editor_absoluteY="398dp" />

            <TextView
                android:id="@+id/scenario_summary"
                android:layout_width="386dp"
                android:layout_height="89dp"
                android:text="Pas d'informations"
                android:translationX="10dp" />

            <TextView
                android:id="@+id/announce_the_hints"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amarante"
                android:lineSpacingExtra="30sp"
                android:text="@string/announce_the_hints"
                android:textColor="#000000"
                android:textSize="24sp"
                android:translationX="10dp"
                android:translationY="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.17"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="520dp" />

            <TextView
                android:id="@+id/the_hints"
                android:layout_width="413dp"
                android:layout_height="267dp"
                android:text="Pas d'informations"
                android:translationX="10dp" />



        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>